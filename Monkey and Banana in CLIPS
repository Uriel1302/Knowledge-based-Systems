(defrule r1 (monkey hands-free) => (printout t"monkey is going to the box" crlf) (assert(monkey infront-box)))
(assert(monkey hands-free))
(run)
(facts)
(defrule r2 (monkey hands-free)(monkey infront-box) => (printout t "monkey is taking the box" crlf) (retract 1)(assert(monkey box-in-hands)))
(run)
(facts)
(defrule r3 (monkey box-in-hands)(monkey infront-box) => (printout t "monkey is going to take the banana" crlf) (retract 2)(assert(monkey below-banana)))
(run)
(facts)
(defrule r4 (monkey box-in-hands)(monkey below-banana) => (printout t "monkey takes banana" crlf) (retract 3)(assert(monkey banana-in-hands)))
(run)
(facts)
(defrule r5 (monkey banana-in-hands)(monkey below-banana) => (printout t "monkey eats banana" crlf) (retract 4)(retract 5)(assert(monkey ate banana)))
(run)
(facts)
